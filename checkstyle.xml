<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <!-- Устанавливаем кодировку файлов -->
    <property name="charset" value="UTF-8"/>
    <module name="TreeWalker">
        <!-- Проверка пробела после определённых символов -->
        <module name="WhitespaceAfter"/>
        <!-- Проверка пробелов вокруг операторов -->
        <module name="WhitespaceAround"/>
        <!-- Проверка на финальные локальные переменные -->
        <module name="FinalLocalVariable"/>
        <!-- Проверка на неиспользуемые импорты -->
        <module name="UnusedImports"/>
        <!-- Проверка отступов -->
<!--        <module name="Indentation">-->
<!--            <property name="basicOffset" value="4"/> &lt;!&ndash; Базовый отступ &ndash;&gt;-->
<!--            <property name="braceAdjustment" value="0"/> &lt;!&ndash; Отступ для скобок&ndash;&gt;-->
<!--            <property name="caseIndent" value="4"/> &lt;!&ndash; Отступ для case в switch &ndash;&gt;-->
<!--            <property name="throwsIndent" value="4"/> &lt;!&ndash; Отступ для throws &ndash;&gt;-->
<!--            <property name="arrayInitIndent" value="4"/> &lt;!&ndash; Отступ для инициализации массивов &ndash;&gt;-->
<!--            <property name="lineWrappingIndentation" value="4"/> &lt;!&ndash; Отступ для переноса строк &ndash;&gt;-->
<!--            <property name="forceStrictCondition" value="true"/> &lt;!&ndash; Строгая проверка отступов &ndash;&gt;-->
<!--        </module>-->
    </module>
    <!-- Проверка длины строки -->
    <module name="LineLength">
        <property name="max" value="150"/> <!-- Максимальная длина строки-->
    </module>
</module>
