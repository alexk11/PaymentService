			"name": "addOne_admin",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Prepare a request to Keycloak for getting access token\r",
							"const request = {\r",
							"    url: \"http://localhost:8085/realms/iprody-lms/protocol/openid-connect/token\",\r",
							"    method: 'POST',\r",
							"    header: {\r",
							"        'Accept': '*/*',\r",
							"        'Content-Type': 'application/x-www-form-urlencoded',\r",
							"    },\r",
							"    body: {\r",
							"        mode: 'urlencoded',\r",
							"        urlencoded: [\r",
							"            { key: 'client_id', value: 'basic_client' },\r",
							"            { key: 'grant_type', value: 'password' },\r",
							"            { key: 'username', value: 'admin' },\r",
							"            { key: 'password', value: 'admin_password' },\r",
							"            { key: 'client_secret', value: 'client-secret' }\r",
							"        ]\r",
							"    }\r",
							"};\r",
							"\r",
							"// Send the request and store access_token and expiration time in the environment variables\r",
							"pm.sendRequest(request,  function (err, response) {\r",
							"\r",
							"    const body = response.json();\r",
							"    \r",
							"    console.info(body.access_token);\r",
							"\r",
							"    pm.environment.set(\"adminAccessToken\", body.access_token);\r",
							"    pm.environment.set(\"adminRefreshToken\", body.refresh_token);\r",
							"\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
